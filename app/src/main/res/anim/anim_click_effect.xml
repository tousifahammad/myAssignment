<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator">

    <scale
        android:duration="80"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale=".97"
        android:toYScale=".97" />

    <scale
        android:duration="80"
        android:fromXScale=".97"
        android:fromYScale=".97"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="80"
        android:toXScale="1"
        android:toYScale="1" />

</set>